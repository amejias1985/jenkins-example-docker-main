pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'node --version'
            }
        }
        stage('Test') {
            agent any
            steps {
                script {
                    docker.image('node:16-alpine').inside {
                        sh 'node --version'
                    }
                }
            }
        }
    }
}
